---
interface Props {
  name: string;
  headline?: string;
  taglines?: string[];
}

const { name, taglines = [
  "Aerospace Engineer",
  "CFD Researcher",
  "Hypersonic Systems"
] } = Astro.props;
---

<section class="hero" id="about">
  <div class="hero__background">
    <div class="hero__gradient"></div>
    <div class="hero__grid"></div>
  </div>
  
  <div class="hero__content container">
    <div class="hero__text">
      <p class="hero__greeting">Hello, I'm</p>
      <h1 class="hero__name">{name}</h1>
      <div class="hero__taglines">
        {taglines.map((tagline, i) => (
          <span class="hero__tagline" style={`--delay: ${i * 0.2}s`}>{tagline}</span>
        ))}
      </div>
      <p class="hero__description">
        PhD researcher specializing in aero-thermo-structural simulation and optimization 
        of hypersonic vehicle systems. Passionate about pushing the boundaries of aerospace engineering.
      </p>
      <div class="hero__actions">
        <a href="#experience" class="hero__btn hero__btn--primary">View Experience</a>
        <a href="#contact" class="hero__btn hero__btn--secondary">Get in Touch</a>
      </div>
    </div>
    
    <div class="hero__visual">
      <div class="hero__orbit">
        <div class="hero__planet"></div>
        <div class="hero__satellite"></div>
      </div>
    </div>
  </div>
  
  <a href="#experience" class="hero__scroll" aria-label="Scroll to content">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M5 12l7 7 7-7"/>
    </svg>
  </a>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding-top: 80px;
  }
  
  .hero__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  
  .hero__gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at 70% 20%,
      var(--color-primary-light) 0%,
      transparent 50%
    );
    opacity: 0.6;
  }
  
  .hero__grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(var(--color-border) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-border) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.3;
    mask-image: radial-gradient(ellipse at center, black 0%, transparent 70%);
  }
  
  .hero__content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }
  
  .hero__greeting {
    font-size: var(--text-lg);
    color: var(--color-primary);
    font-weight: 500;
    margin-bottom: var(--space-2);
    animation: fadeIn 0.6s ease-out;
  }
  
  .hero__name {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.1;
    margin-bottom: var(--space-4);
    animation: slideUp 0.6s ease-out 0.1s backwards;
  }
  
  .hero__taglines {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
  }
  
  .hero__tagline {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
    animation: slideUp 0.6s ease-out calc(0.2s + var(--delay)) backwards;
  }
  
  .hero__description {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.7;
    max-width: 540px;
    margin-bottom: var(--space-8);
    animation: slideUp 0.6s ease-out 0.4s backwards;
  }
  
  .hero__actions {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
    animation: slideUp 0.6s ease-out 0.5s backwards;
  }
  
  .hero__btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    border-radius: var(--radius-lg);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .hero__btn--primary {
    background: var(--color-primary);
    color: white;
  }
  
  .hero__btn--primary:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .hero__btn--secondary {
    background: var(--color-bg-elevated);
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }
  
  .hero__btn--secondary:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }
  
  /* Animated orbital visual */
  .hero__visual {
    display: flex;
    align-items: center;
    justify-content: center;
    animation: fadeIn 1s ease-out 0.6s backwards;
  }
  
  .hero__orbit {
    width: 300px;
    height: 300px;
    border: 2px dashed var(--color-border);
    border-radius: 50%;
    position: relative;
    animation: rotate 30s linear infinite;
  }
  
  .hero__planet {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
    border-radius: 50%;
    box-shadow: 0 0 60px rgba(var(--color-primary-h), 50%, 50%, 0.3);
  }
  
  .hero__satellite {
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 16px;
    height: 16px;
    background: var(--color-accent);
    border-radius: 50%;
    box-shadow: 0 0 20px var(--color-accent);
  }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .hero__scroll {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    color: var(--color-text-muted);
    animation: bounce 2s infinite;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
    40% { transform: translateX(-50%) translateY(-10px); }
    60% { transform: translateX(-50%) translateY(-5px); }
  }
  
  @media (max-width: 768px) {
    .hero__content {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .hero__taglines {
      justify-content: center;
    }
    
    .hero__description {
      margin-inline: auto;
    }
    
    .hero__actions {
      justify-content: center;
    }
    
    .hero__visual {
      order: -1;
    }
    
    .hero__orbit {
      width: 200px;
      height: 200px;
    }
    
    .hero__planet {
      width: 50px;
      height: 50px;
    }
  }
</style>
