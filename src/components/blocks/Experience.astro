---
interface Experience {
  company: string;
  position: string;
  location: string;
  start_date: string | number;
  end_date?: string | number;
  highlights: string[];
}

interface Props {
  experiences: Experience[];
}

const { experiences } = Astro.props;

function formatDate(date: string | number | undefined): string {
  if (!date) return 'Present';
  if (typeof date === 'number') return date.toString();
  
  const d = new Date(date);
  if (isNaN(d.getTime())) return date;
  
  return d.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
}

function cleanHighlight(text: string): string {
  // Remove markdown bold/italic markers for cleaner display
  return text.replace(/\*\*/g, '').replace(/\*/g, '');
}
---

<section class="experience section" id="experience">
  <div class="container">
    <div class="section__header">
      <h2 class="section__title">Experience</h2>
      <p class="section__subtitle">
        From lunar landers to Formula SAE racecars, building systems that push boundaries
      </p>
    </div>
    
    <div class="timeline">
      {experiences.map((exp, index) => (
        <article class="timeline__item" style={`--index: ${index}`}>
          <div class="timeline__marker">
            <span class="timeline__dot"></span>
            <span class="timeline__line"></span>
          </div>
          
          <div class="timeline__content">
            <div class="timeline__header">
              <div>
                <h3 class="timeline__company">{exp.company}</h3>
                <p class="timeline__position">{exp.position}</p>
              </div>
              <div class="timeline__meta">
                <span class="timeline__date">
                  {formatDate(exp.start_date)} — {formatDate(exp.end_date)}
                </span>
                <span class="timeline__location">{exp.location}</span>
              </div>
            </div>
            
            <ul class="timeline__highlights">
              {exp.highlights.map(highlight => (
                <li>{cleanHighlight(highlight)}</li>
              ))}
            </ul>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }
  
  .timeline__item {
    display: grid;
    grid-template-columns: 40px 1fr;
    gap: var(--space-6);
    padding-bottom: var(--space-10);
    opacity: 0;
    animation: slideUp 0.5s ease-out forwards;
    animation-delay: calc(var(--index) * 0.1s);
  }
  
  .timeline__item:last-child {
    padding-bottom: 0;
  }
  
  .timeline__item:last-child .timeline__line {
    display: none;
  }
  
  .timeline__marker {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .timeline__dot {
    width: 16px;
    height: 16px;
    background: var(--color-primary);
    border-radius: 50%;
    flex-shrink: 0;
    box-shadow: 0 0 0 4px var(--color-primary-light);
  }
  
  .timeline__line {
    width: 2px;
    flex: 1;
    background: var(--color-border);
    margin-top: var(--space-2);
  }
  
  .timeline__content {
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    transition: all 0.3s ease;
  }
  
  .timeline__content:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
    transform: translateX(4px);
  }
  
  .timeline__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
    flex-wrap: wrap;
  }
  
  .timeline__company {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }
  
  .timeline__position {
    font-size: var(--text-base);
    color: var(--color-primary);
    font-weight: 500;
  }
  
  .timeline__meta {
    text-align: right;
    flex-shrink: 0;
  }
  
  .timeline__date {
    display: block;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }
  
  .timeline__location {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .timeline__highlights {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .timeline__highlights li {
    position: relative;
    padding-left: var(--space-5);
    margin-bottom: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
  }
  
  .timeline__highlights li:last-child {
    margin-bottom: 0;
  }
  
  .timeline__highlights li::before {
    content: '▹';
    position: absolute;
    left: 0;
    color: var(--color-primary);
  }
  
  @media (max-width: 640px) {
    .timeline__item {
      grid-template-columns: 20px 1fr;
      gap: var(--space-4);
    }
    
    .timeline__header {
      flex-direction: column;
    }
    
    .timeline__meta {
      text-align: left;
    }
    
    .timeline__dot {
      width: 12px;
      height: 12px;
    }
  }
</style>
