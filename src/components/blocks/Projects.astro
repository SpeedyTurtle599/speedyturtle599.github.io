---
interface Project {
  name: string;
  location: string;
  start_date: string | number;
  end_date?: string | number;
  highlights: string[];
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;

function formatDate(date: string | number | undefined): string {
  if (!date) return 'Present';
  if (typeof date === 'number') return date.toString();
  
  const d = new Date(date);
  if (isNaN(d.getTime())) return date;
  
  return d.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
}

function cleanText(text: string): string {
  return text.replace(/\*\*/g, '').replace(/\*/g, '');
}
---

<section class="projects section section--alt" id="projects">
  <div class="container">
    <div class="section__header">
      <h2 class="section__title">Research & Projects</h2>
      <p class="section__subtitle">
        From supersonic flow reconstruction to GPU-accelerated turbulence modeling
      </p>
    </div>
    
    <div class="projects__grid">
      {projects.map((project, index) => (
        <article class="project-card" style={`--index: ${index}`}>
          <div class="project-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
              <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
            </svg>
          </div>
          
          <div class="project-card__content">
            <h3 class="project-card__title">{cleanText(project.name)}</h3>
            <div class="project-card__meta">
              <span>{formatDate(project.start_date)} — {formatDate(project.end_date)}</span>
              <span>•</span>
              <span>{project.location}</span>
            </div>
            
            <ul class="project-card__highlights">
              {project.highlights.map(highlight => (
                <li>{cleanText(highlight)}</li>
              ))}
            </ul>
          </div>
          
          <div class="project-card__glow"></div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .projects__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-6);
  }
  
  .project-card {
    position: relative;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    overflow: hidden;
    opacity: 0;
    animation: slideUp 0.5s ease-out forwards;
    animation-delay: calc(var(--index) * 0.1s);
    transition: all 0.3s ease;
  }
  
  .project-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }
  
  .project-card:hover .project-card__glow {
    opacity: 1;
  }
  
  .project-card__glow {
    position: absolute;
    top: 0;
    right: 0;
    width: 200px;
    height: 200px;
    background: radial-gradient(
      circle at top right,
      var(--color-primary-light) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  .project-card__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--color-primary-light);
    color: var(--color-primary);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-4);
  }
  
  .project-card__content {
    position: relative;
    z-index: 1;
  }
  
  .project-card__title {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
    line-height: 1.3;
  }
  
  .project-card__meta {
    display: flex;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
    flex-wrap: wrap;
  }
  
  .project-card__highlights {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .project-card__highlights li {
    position: relative;
    padding-left: var(--space-5);
    margin-bottom: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
  }
  
  .project-card__highlights li:last-child {
    margin-bottom: 0;
  }
  
  .project-card__highlights li::before {
    content: '▹';
    position: absolute;
    left: 0;
    color: var(--color-primary);
  }
  
  @media (max-width: 640px) {
    .projects__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
