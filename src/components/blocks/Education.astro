---
interface Education {
  institution: string;
  area: string;
  degree: string;
  location: string;
  start_date: string | number;
  end_date?: string | number;
  highlights: string[];
}

interface Props {
  education: Education[];
}

const { education } = Astro.props;

function formatDate(date: string | number | undefined): string {
  if (!date) return 'Present';
  return date.toString();
}

function cleanText(text: string): string {
  return text.replace(/\*\*/g, '').replace(/\*/g, '');
}

const degreeColors: Record<string, string> = {
  'PhD': 'hsl(264, 48%, 33%)',
  'MS': 'hsl(200, 80%, 45%)',
  'BS': 'hsl(160, 60%, 40%)',
};
---

<section class="education section" id="education">
  <div class="container">
    <div class="section__header">
      <h2 class="section__title">Education</h2>
      <p class="section__subtitle">
        Academic foundation in mechanical and aeronautical engineering
      </p>
    </div>
    
    <div class="education__grid">
      {education.map((edu, index) => (
        <article 
          class="edu-card" 
          style={`--index: ${index}; --degree-color: ${degreeColors[edu.degree] || 'var(--color-primary)'}`}
        >
          <div class="edu-card__badge">{edu.degree}</div>
          
          <div class="edu-card__content">
            <h3 class="edu-card__institution">{edu.institution}</h3>
            <p class="edu-card__area">{edu.area}</p>
            
            <div class="edu-card__meta">
              <span class="edu-card__date">
                {formatDate(edu.start_date)} — {formatDate(edu.end_date)}
              </span>
              <span class="edu-card__location">{edu.location}</span>
            </div>
            
            {edu.highlights.length > 0 && (
              <ul class="edu-card__highlights">
                {edu.highlights.map(highlight => (
                  <li set:html={cleanText(highlight)} />
                ))}
              </ul>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .education__grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    max-width: 900px;
    margin: 0 auto;
  }
  
  .edu-card {
    position: relative;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    padding-left: var(--space-8);
    opacity: 0;
    animation: slideUp 0.5s ease-out forwards;
    animation-delay: calc(var(--index) * 0.15s);
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .edu-card::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--degree-color);
  }
  
  .edu-card:hover {
    border-color: var(--degree-color);
    box-shadow: var(--shadow-lg);
    transform: translateX(4px);
  }
  
  .edu-card__badge {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    padding: var(--space-1) var(--space-3);
    background: var(--degree-color);
    color: white;
    font-size: var(--text-xs);
    font-weight: 700;
    border-radius: var(--radius-full);
    letter-spacing: 0.05em;
  }
  
  .edu-card__institution {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-1);
    padding-right: 60px;
  }
  
  .edu-card__area {
    font-size: var(--text-base);
    color: var(--color-primary);
    font-weight: 500;
    margin-bottom: var(--space-3);
  }
  
  .edu-card__meta {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
    flex-wrap: wrap;
  }
  
  .edu-card__date,
  .edu-card__location {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .edu-card__highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    border-top: 1px solid var(--color-border);
    padding-top: var(--space-4);
  }
  
  .edu-card__highlights li {
    position: relative;
    padding-left: var(--space-5);
    margin-bottom: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
  }
  
  .edu-card__highlights li:last-child {
    margin-bottom: 0;
  }
  
  .edu-card__highlights li::before {
    content: '▹';
    position: absolute;
    left: 0;
    color: var(--degree-color);
  }
  
  @media (max-width: 640px) {
    .edu-card {
      padding: var(--space-5);
      padding-left: var(--space-6);
    }
    
    .edu-card__institution {
      font-size: var(--text-lg);
    }
  }
</style>
